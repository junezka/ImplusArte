---
interface Props {
    titulo?: string;
    contenido?: string;
}
const { titulo, contenido } = Astro.props;
import logo from "../images/13.png"
import Button from "./Button";
---

<div class="flex flex-col md:flex-row">
    <div class="card">
        <img src="/images/logotipo.png" alt=""  class="w-32 m-auto">
        <h1 class="text-4xl font-bold my-4">{titulo}</h1>
        <p class="text-2xl my-4">{contenido}</p>
        <button class="buttom px-3 py-2 hover:bg-rose-400 p-10 gap-4 ">Comenzar</button>
    </div>
</div>

<style>
    .card {
        background: #1B0112;
        border-radius: 15px;
        margin: 20px;
        width: 500px;
        padding: auto;
        gap: 4;
    }
    .buttom {
        background: #E44#C3;
        opacity: 50px;
        border-radius: 15px;
        box-shadow: 0 10px 25px 0 #ffffff, 0 15px 5px 0 #ffffff56;
        padding: 20px;
        width: 150px;
        margin-bottom: 30px;
    }
</style>
